<template name="xkd-switch">
  <view
    class="xkd-switch xkd-switch-{{ checked ? 'on' : 'off' }} {{ disabled ? 'xkd-swtich-disabled' : '' }}"
    data-checked="{{ checked }}"
    data-loading="{{ loading }}"
    data-disabled="{{ disabled }}"
    data-component-id="{{ componentId }}"
    data-switch-type= "{{ switchType }}"
    bindtap="_handleXkdSwitchChange"
  >
    <view class="xkd-switch-circle">
      <view hidden="{{ !loading }}" class="xkd-switch-loading"></view>
    </view>
    <view class="xkd-switch-bg"></view>
  </view>
</template>