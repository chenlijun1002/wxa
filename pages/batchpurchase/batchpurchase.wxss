/*下箭头*/

.arrow-box {
  width: 30px;
  height: 30px;
  position: relative;
}

.bottom {
  width: 16px;
  height: 16px;
  position: absolute;
  right: 0;
  top: 50%;
  transform: translateY(-6px);
}
.arrow-down .arrow1, .arrow-down .arrow2 {
  width: 0;
  height: 0;
  display: block;
  position: absolute;
  left: 0;
  top: 0;
  border-bottom: 6px transparent dashed;
  border-left: 6px transparent dashed;
  border-right: 6px transparent dashed;
  border-top: 6px solid white;
  overflow: hidden;
}
.arrow-up .arrow1,.arrow-up .arrow2 {
  width: 0;
  height: 0;
  display: block;
  position: absolute;
  left: 0;
  top: 0;
  border-bottom: 6px solid white;
  border-left: 6px transparent dashed;
  border-right: 6px transparent dashed;
  border-top:  6px transparent dashed;
  overflow: hidden;
}
.arrow-down .arrow1 {
  top: 1px;
  border-top: 6px solid #bdbdbd;
}
.arrow-up .arrow1 {
  top: -1px;
  border-bottom: 6px solid #bdbdbd;
}
