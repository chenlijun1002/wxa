/* 筛选条件 */
.filter-condition{
  display: table;
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 30rpx;
  border-bottom: 1rpx solid #eee;  
}
.filter-condition view{
  display: table-cell;
  width: 33.333333%;
  text-align: center;
  height: 90rpx;
  line-height: 90rpx;
}
.filter-condition view button{
  font-size: 28rpx;
  background: #fff;
}
.by-price,.by-sales{
  position: relative;
}
 .by-price::before,.by-sales::before{
  content: '';
  position: absolute;
  top:60%;
  margin-top: -25rpx;
  right: 20rpx;
  border: 8rpx solid #8c8c8c;
  border-top: 8rpx solid transparent;
  border-left: 8rpx solid transparent;
  border-right: 8rpx solid transparent;
} 
 .by-price::after,.by-sales::after{
  content: '';
  position: absolute;
  top:70%;
   margin-top: -16rpx; 
  right: 20rpx;
  border: 8rpx solid #8c8c8c;
  border-bottom: 8rpx solid transparent;
  border-left: 8rpx solid transparent;
  border-right: 8rpx solid transparent; 
}
.descending::after{  
  border: 8rpx solid #f54336;
  border-bottom: 8rpx solid transparent;
  border-left: 8rpx solid transparent;
  border-right: 8rpx solid transparent; 
}
.ascending::before{  
  border: 8rpx solid #f54336;
  border-top: 8rpx solid transparent;
  border-left: 8rpx solid transparent;
  border-right: 8rpx solid transparent;
}
