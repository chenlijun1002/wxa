/* pages/reduceauction/myauctiondetail/myauctiondetail.wxss */
@import '../../seckilling/paystatus/paystatus.wxss';

.pay-status.bg2 {
  background: url("http://file.xiaokeduo.com/system/xkdxcx/system/images/seckilling-success-bg.jpg") no-repeat left top;
  background-size: cover;
}

.pay-status.bg1 {
  background: url("http://file.xiaokeduo.com/system/xkdxcx/system/images/back-money-bg.jpg") no-repeat left top;
  background-size: cover;
}

.pay-status.bg4 {
  background: url("http://file.xiaokeduo.com/system/xkdxcx/system/images/pay-overtime-bg.jpg") no-repeat left top;
  background-size: cover;
}

.time-tips {
  display: flex;
  align-items: center;
  height: 64rpx;
  padding-left: 24rpx;
  background: #fffaf0;
}

.timer-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 16rpx;
  background: url('http://file.xiaokeduo.com/system/xkdxcx/system/images/timer.png') no-repeat;
  background-size: cover;
}

.buy-now {
  display: flex;
  align-items: center;
  justify-content: flex-end;
  height: 112rpx;
  padding-right: 24rpx;
  background: #fff;
}

.buy-now button {
  width: 172rpx;
  height: 64rpx;
  line-height: 64rpx;
  text-align: center;
  font-size: 32rpx;
  color: #ff7800;
  background: #fff;
  border: 1px solid #ff7800;
}

.activity-tag {
  position: relative;
  top: -1rpx;
  display: inline-block;
  padding: 0 8rpx;
  height: 41rpx;
  border-radius: 8rpx;
  font-size: 25rpx;
  text-align: center;
  line-height: 41rpx;
  margin-right: 10rpx;
  border: 1px solid #fd1d1d;
  color: #fd1d1d;
}
.shop-name {
  line-height: 48rpx;
  padding: 2rpx 0;
}

.shop-specification {
  line-height: 48rpx;
  margin: 0;
}


