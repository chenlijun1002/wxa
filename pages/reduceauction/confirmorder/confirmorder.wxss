/* pages/reduceauction/confirmorder/confirmorder.wxss */
@import '../../seckilling/submitorder/submitorder.wxss';

.time-tips {
  display: flex;
  align-items: center;
  height: 64rpx;
  padding-left: 24rpx;
  background: #fffaf0;
}

.timer-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 16rpx;
  background: url('http://file.xiaokeduo.com/system/xkdxcx/system/images/timer.png') no-repeat;
  background-size: cover;
}

.activity-tag {
  position: relative;
  top: -1rpx;
  display: inline-block;
  padding: 0 8rpx;
  height: 41rpx;
  border-radius: 8rpx;
  font-size: 25rpx;
  text-align: center;
  line-height: 41rpx;
  margin-right: 10rpx;
  border: 1px solid #fd1d1d;
  color: #fd1d1d;
}

.shop-name {
  line-height: 48rpx;
  padding: 2rpx 0;
}

.shop-specification {
  line-height: 48rpx;
  margin: 0;
}
