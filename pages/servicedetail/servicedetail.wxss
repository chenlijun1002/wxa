/* pages/servicedetail/servicedetail.wxss */
.service-explain{
  padding: 30rpx 0;
  background-color: #fff;
  margin-bottom: 24rpx;
}
.service-explain text{
  position: relative;
  display: block;
  font-size: 28rpx;
  color: #757575;
  margin-bottom: 30rpx;
  padding-left: 50rpx;
  padding-right: 24rpx;
}
.service-explain text:last-child{
  margin-bottom: 0;
}
.service-explain text:before{
  position: absolute !important;
  display: block;
  content: "";
  width: 8rpx;
  height: 8rpx;
  background-color: #757575;
  border-radius: 50%;
  left: 24rpx;
  top: 16rpx;
}
.service-info{
  padding: 18rpx 24rpx;
  background-color: #fff;
  font-size: 28rpx;
  line-height: 60rpx;
  border-bottom: 1px solid #DFDFDF;
}
.logistics-data-p{
  position: relative;
  padding-left: 48rpx;
  padding-bottom: 50rpx;
  background-color: #fff;
}
.logistics-data-group{
  position: relative;
}
.logistics-data-p:before{
  display: block;
  content: "";
  position: absolute;
  width: 2rpx;
  background-color: #E0E0E0;
  left: 46rpx;
  top: 39rpx;
  bottom: 0;
}
.logistics-data-item{
  position: relative;
  margin-left: 38rpx;
  padding-top: 30rpx;
}
.logistics-data-item:before{
  display: block;
  content: "";
  position: absolute;
  width: 18rpx;
  height: 18rpx;
  background-color: #E0E0E0;
  border-radius: 50%;
  top: 39rpx;
  left: -48rpx;
}
.logistics-data-item.current:before{
  border:4rpx solid #ABECE8;
  background-color: #00A699;
  top: 35rpx;
  left: -52rpx;
}
.logistics-data-item text{
  display: block;
  line-height: 34rpx;
}
.logistics-data-item .title{
  font-size: 28rpx;
  margin-bottom: 14rpx;
  color: #757575;
}
.logistics-data-item.current .title{
  color: #00A699;
}
.logistics-data-item .date-time{
  font-size: 24rpx;
  color: #BDBDBD;
  height: 34rpx;
}
.logistics-data-title{
  font-size: 28rpx;
  color: #757575;
  padding: 20rpx 0 4rpx 24rpx;
  background-color: #fff;
}

.tel-text{
  position: relative;
  display: block;
  font-size: 28rpx;
  margin-bottom: 30rpx;
  padding-left: 50rpx;
  padding-right: 24rpx;
  color: #00a699;
}
.refund-imgview{
  display: inline-block;
  width: 120rpx;
  height: 120rpx;
  margin-right: 20rpx;
  margin-top: 20rpx;
}
.refund-img{
  display: inline-block;
  width: 120rpx;
  height: 120rpx;
}