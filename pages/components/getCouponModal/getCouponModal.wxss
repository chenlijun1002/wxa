.getCouponModal-box{
    position: fixed;
    left: 0;
    top: 0;
    bottom: 0;
    right: 0;
    background-color: rgba(0,0,0,0.6);
    z-index: 998;
}
.getCouponModal-modal{
    position: fixed;
    width: 560rpx;
    left: 50%;
    top: 50%;
    background-color: #fff;
    margin-left: -290rpx;
    transform: translateY(-50%);
    z-index: 999;
    border-radius: 16rpx;
}
.getCouponModal-modal .modal-body{
  width: 100%;
  background: url('http://testfile.xiaokeduo.com/system/xkdxcx/system/images/getCouponModal.png');
  background-size: 100%;
  height: 576rpx;
  position: relative;
  padding: 0 24rpx;
  box-sizing: border-box;
}
.getCouponModal-modal .modal-body .coupon-content{
   position: absolute;
   bottom:60rpx;
   width: 512rpx;
   height: 190rpx; 
   display: flex;   
}
.getCouponModal-modal .modal-body .coupon-content .coupon-value{  
   flex:3; 
   line-height: 190rpx; 
    text-align: center;  
}
.getCouponModal-modal .modal-body .coupon-content .coupon-condition{  
   flex:7; 
   font-size: 28rpx; 
   padding: 45rpx 0;
   text-align: center;
}
