/* pages/commissiontobalance/commissiontobalance.wxss */
.balance-head {
    box-sizing: border-box;
    height: 216rpx;
    padding: 64rpx 24rpx 0 56rpx;
    background: #fff;
}
.overage-icon {
  float: left;
  width: 90rpx;
  height: 90rpx;
  margin-top: 10rpx;
  background: url('http://xkdsaas.oss-cn-shanghai.aliyuncs.com/system/xkdxcx/system/images/commission-icon.png')no-repeat;
  background-size: cover;
}
.balance-head-money {
    float: left;
    margin-left: 42rpx;
}

.balance-head-money view {
    font-size: 28rpx;
}

.balance-head-money .money {
    font-size: 32rpx;
    color: #212121;
    font-weight: 600;
}

.balance-head-money view text {
    font-size: 56rpx;
}
.item {
  display: flex;
  align-items: center;
  height: 114rpx;
  padding-left: 26rpx;
  background: #fff;
}
.item label,.item input {
  font-size: 32rpx;
}
.item input {
  padding-left: 58rpx;
}
.tips {
  height: 66rpx;
  line-height: 66rpx;
  padding-left: 24rpx;
  background: #FFCC66;
  font-size: 28rpx;
}
.tips text {
  width: 60rpx;
  height: 100%;
  text-align: center;
  font-size: 40rpx;
}
.recharge-btn {
    height: 90rpx;
    padding: 0 24rpx;
    margin-top: 96rpx;
}

.recharge-btn button {
    width: 100%;
    height: 100%;
    line-height: 90rpx;
    background: #00A191;
    font-size: 36rpx;
    border-radius: 16rpx;
    color: rgba(255, 255, 255, .5);
}
.recharge-btn button.blur {
  color: rgba(255, 255, 255, 1);
}
