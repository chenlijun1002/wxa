
.depositrequest-head {
    box-sizing: border-box;
    height: 218rpx;
    padding: 70rpx 24rpx 70rpx 56rpx ;
    background: #fff;
}

.depositrequest-head text {
  line-height: 82rpx;
  margin-left: 30rpx;
}
.request-info{
  margin-top: 24rpx;
  padding-left: 26rpx;
  background: #fff;
}
.request-info .item{
  position: relative;
  padding-left: 186rpx;
  height: 114rpx;
  line-height: 114rpx;
}
.request-info .item .input-ctrl{
  display: block;
  width: 100%;
  height: 114rpx;
  line-height: 114rpx;
  font-size: 32rpx;
  color: #747474;
}
.request-info .item .title{
  position: absolute;
  left: 0;
  top: 0;
  height: 112rpx;
  line-height: 112rpx;
  font-size: 32rpx;
}
.remark .remark-title {
  box-sizing: border-box;
  height: 80rpx;
  line-height: 80rpx;
  padding-left: 26rpx;
  font-size: 32rpx;
  color: #212121;
}
.remark textarea {
  box-sizing: border-box;
  width: 100%;
  height: 200rpx;
  padding: 24rpx 26rpx; 
  background: #fff;
  font-size: 32rpx;
}
.depositrequest-btn {
    height: 90rpx;
    padding: 0 24rpx;
    margin-top: 96rpx;
}

.depositrequest-btn button {
    width: 100%;
    height: 100%;
    line-height: 90rpx;
    background: #00A191;
    font-size: 36rpx;
    border-radius: 16rpx;
    color: #fff;
}
.popup-bottom {
  width: 100%;
  height: 880rpx;
}
.popup-bottom .popup-header {
  position: relative;
  height: 118rpx;
  line-height: 118rpx;
  text-align: center;
  font-size: 36rpx;
  color: #202020;
  border-bottom: 1px solid #e0e0e0;
}
.popup-bottom .popup-header icon {
  position: absolute;
  right: 28rpx;
  top: 20%;
}
.popup-body {
  padding-left: 30rpx;
}
.popup-body .request-type {
  box-sizing: border-box;
  height: 118rpx;
  line-height: 62rpx;
  padding: 26rpx 28rpx 26rpx 0;
}
.popup-body .request-type icon {
  margin-top: 8rpx;
}
.right-icon {
  transform: translateY(36rpx);
}
.money-package-icon {
  float: left;
  width: 82rpx;
  height: 82rpx;
  background: url('http://xkdsaas.oss-cn-shanghai.aliyuncs.com/system/xkdxcx/system/images/money-package.png')no-repeat;
  background-size: cover;
}

.offline-icon {
  float: left;
  width: 82rpx;
  height: 82rpx;
  background: url('http://xkdsaas.oss-cn-shanghai.aliyuncs.com/system/xkdxcx/system/images/offline.png')no-repeat;
  background-size: cover;
}
.popup-body .request-type .money-package-icon {
  width: 56rpx;
  height: 66rpx;
  margin-right: 36rpx;
}
.popup-body .request-type .offline-icon {
  width: 60rpx;
  height: 64rpx;
  margin-right: 28rpx;
}
