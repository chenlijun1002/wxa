/* pages/storesetting/storesetting.wxss */
.store-container {
  padding-left: 24rpx;
  background: #fff;
}
.store-logo,.store-name,.store-description {
  position: relative;
  display: flex;
}
.store-logo,.store-name {
  align-items: center;
}
.store-logo {
  justify-content: space-between;
  padding: 24rpx 24rpx 24rpx 0;
}
.store-logo .store-logo-img {
  box-sizing: border-box;
  position: relative;
  width: 186rpx;
  height: 186rpx;
  border: 1px solid #e0e0e0;
}
.store-logo .store-logo-img image {
  width: 100%;
  height: 100%;
}
.store-logo .store-logo-img text {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 58rpx;
  line-height: 58rpx;
  color: #fefefe;
  background: rgba(0, 0, 0, .5);
  text-align: center;
}
.store-name,.store-description {
  padding: 32rpx 24rpx 32rpx 0;
  line-height: 48rpx;
}
.store-description {
  align-items: flex-start;
}
.store-name .name, .store-description .description {
  flex: 1;
  margin-left: 58rpx;
}
.right-icon {
  transform: translateY(0);
}
.store-description .right-icon {
  transform: translateY(14rpx);
}
.store-btn {
  box-sizing: border-box;
  height: 88rpx;
  padding: 0 24rpx;
  margin-top: 96rpx;
}
.store-btn button {
  width: 100%;
  height: 100%;
  line-height: 88rpx;
  font-size: 36rpx;
  background: #fff;
  border: 1px solid #e0e0e0;
  border-radius: 16rpx;
}

