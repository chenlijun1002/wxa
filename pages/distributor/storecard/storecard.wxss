/* pages/storecard/storecard.wxss */

page {
  height: 100%;
}

.store-card {
  position: relative;
}
.store-card{
  width: 100%;
  height: 100%;
}
.store-card .store-card-img{
  margin: 50rpx auto;
  height: 58%;
  width: 68%;
}
.store-card .store-card-img image {
  width: 100%;
  height: 100%
}

.tips {
  position: absolute;
  display: flex;
  top: 0;
  left: 0;
  padding: 8rpx 24rpx;
  background: rgba(0, 0, 0, 0.4);
  font-size: 28rpx;
  color: #fff;
}

.tips-text {
  flex: 1;
  line-height: 40rpx;
}

.restart {
  width: 160rpx;
  height: 64rpx;
  line-height: 64rpx;
  text-align: center;
  margin-left: 40rpx;
  margin-top: 8rpx;
  border: 1px solid #fff;
  border-radius: 16rpx;
}
form,.sendformid-btn{
    position: fixed;
    width:100%;
    height:100%;
    left: 0;
    top: 0;
}
.sendformid-btn{
    position: absolute;
    right: 0;
    bottom: 0;
}

button.add-btn{
  color:#fff;
  height: 90rpx;
  line-height: 90rpx;
  background-color: #00A699;
}
.add-btn-hover{
  background-color: #58AAA5 !important;
}

button.add-btn-copy{
  color:#000;
  height: 90rpx;
  line-height: 90rpx;
}