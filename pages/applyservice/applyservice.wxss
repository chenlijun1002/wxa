/* pages/applyservice/applyservice.wxss */
page {
  padding-bottom:130rpx;
}
.group-input {
  padding-left: 24rpx;
  margin: 24rpx 0;
  background-color: #fff;
}

.explain {
  font-size: 32rpx;
  padding-left: 24rpx;
  margin-bottom: 18rpx;
}

.refund-reason {
  display: block;
  background-color: #fff;
  padding-left: 24rpx;
  font-size: 32rpx;
  height: 100rpx;
}

.popup-bottom {
  height: 880rpx;
}

.select-group {
  height: 520rpx;
  background-color: #fff;
  margin-bottom: 16rpx;
  padding-left: 24rpx;
}

.select-group .group-row icon {
  position: absolute;
  right: 24rpx;
  top: 16rpx;
  display: none;
}

.select-group .group-row {
  height: 112rpx;
  line-height: 112rpx;
  padding-left: 0;
}

.select-group .group-row.selected icon {
  display: block;
}

.tips {
  padding: 16rpx 24rpx;
  color: #ff4757;
  font-size: 28rpx;
  line-height: 48rpx;
}

.upload-certificate .title {
  box-sizing: border-box;
  height: 80rpx;
  line-height: 80rpx;
  padding-left: 24rpx;
}

.certificate {
  background: #fff;
  padding: 24rpx 0 24rpx 24rpx;
}

.certificate-images {
  display: flex;
  flex-wrap: wrap;
}

.certificate-image, .certificate-add-image {
  position: relative;
  width: 160rpx;
  height: 160rpx;
  border: 1px solid #e0e0e0;
}

.certificate-image {
  margin-right: 16rpx;
  margin-bottom: 16rpx;
}
.certificate-image image {
  position: relative;
  width: 100%;
  height: 100%;
  z-index: 10
}
.certificate-add-image {
  background: url("http://file.xiaokeduo.com/system/xkdxcx/system/images/upload-img.png") no-repeat left top;
  background-size: 88rpx 80rpx;
  background-position: center;
}

.delete-img-icon {
  position: absolute;
  top: -20rpx;
  right: -20rpx;
  width: 48rpx;
  height: 48rpx;
  background: url("http://file.xiaokeduo.com/system/xkdxcx/system/images/delete-icon.png") no-repeat left top;
  background-size: 36rpx 36rpx;
  background-position: center;
  z-index: 11;
}
.certificate-text {
  margin-top: 16rpx;
  margin-bottom: 8rpx;
}
