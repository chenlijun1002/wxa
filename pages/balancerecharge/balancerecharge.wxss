.balancerecharge-head {
    box-sizing: border-box;
    height: 218rpx;
    padding: 70rpx 56rpx;
    background: #fff;
}

.balancerecharge-head .wx-pay {
    height: 100%;
    margin: 16rpx 0 0 32rpx;
    font-size: 36rpx;
}

.balancerecharge-head .money-icon {
    float: left;
    width: 82rpx;
    height: 82rpx;
    background-size: cover;
}

.item {
    display: flex;
    height: 114rpx;
    margin: 24rpx 0 96rpx 0;
    padding-left: 26rpx;
    font-size: 32rpx;
    background: #fff;
}

.item label {
    color: #212121;
    line-height: 112rpx;
}

.item input {
    height: 100%;
    margin-left: 40rpx;
}

.recharge-btn {
    height: 90rpx;
    padding: 0 24rpx;
}

.recharge-btn button {
    width: 100%;
    height: 100%;
    line-height: 90rpx;
    background: #00A191;
    font-size: 36rpx;
    border-radius: 16rpx;
    color: rgba(255, 255, 255, .5);
}
.recharge-btn button.blur {
  color: rgba(255, 255, 255, 1);
}