/* pages/supportvalueservice/supportvalueservice.wxss */
.nav-fixed-top .nav-item.active{
    border-bottom: none;
}
.nav-fixed-top .nav-item{
    position: relative;
}
.nav-fixed-top .nav-item.active::after{
    position: absolute;
    content: "";
    display: block;
    width: 80rpx;
    height: 4rpx;
    left: 50%;
    margin-left: -40rpx;
    bottom: 0;
    background-color: #00A699;
}
.nav-fixed-top{
    padding: 0 180rpx;
    box-sizing: border-box;
    z-index: 20;
}
scroll-view{
  position: fixed;
  top: 100rpx;
  bottom: 0;
  width: 100%;
}
.supportvalue-panel{
    margin-top: 24rpx;
}
.supportvalue-panel:nth-of-type(2){
    margin-top: 0;
}
.supportvalue-panel .order-info{
    padding: 18rpx 24rpx;
    font-size: 24rpx;
    line-height: 42rpx;
    border-bottom:1px solid #E0E0E0;
}
.product-info{
    position: relative;
    background-color: #fff;
    height: 225rpx;
    padding:32rpx 24rpx 32rpx 200rpx;
    box-sizing: border-box;
}
.product-info:after{
    position: absolute;
    content: "";
    left: 24rpx;
    right: 0;
    bottom: 0;
    height: 1px;
    background-color: #E0E0E0;
}
.product-info:last-child:after{
    background-color: transparent;
}
.product-info .product-pic{
    position: absolute;
    left: 24rpx;
    top: 50%;
    width: 160rpx;
    height: 160rpx;
    margin-top: -80rpx;
}
.product-info .product-name{
    font-size: 32rpx;
    color: #515151;
    line-height: 43rpx;
}
.product-info .spec-text{
    font-size: 28rpx;
    color: #747474;
    height: 30rpx;
    line-height: 30rpx;
    margin-top: 16rpx;
    margin-bottom: 20rpx;
}
.product-info .price-quantity{
    color: #212121;
    font-size: 32rpx;
}
.supportvalue-panel .btn-panel{
    padding: 16rpx 24rpx;
}
.product-info .btn{
    position: absolute;
    right: 24rpx;
    bottom: 24rpx;
    display: inline-block;
    background-color: transparent;
    border:1px solid #515151;
    border-radius: 16rpx;
    min-width: 120rpx;
    color: #212121;
    font-size: 28rpx;
    height: 64rpx;
    line-height: 58rpx;
}
.product-info .btn.apply-in{
    border-color: #BDBDBD;
    color: #BDBDBD;
}
.apply-state-panel{
    position: relative;
    padding: 26rpx 24rpx 26rpx 203rpx;
}
.apply-state-panel .apply-msg{
    padding-left: 18rpx;
    font-size: 28rpx;
    color: #515151;
    line-height: 36rpx;
    border-left: 1px solid #BDBDBD;
    word-wrap:break-word;
}
.apply-state-panel .apply-state{
    position: absolute;
    padding-left: 48rpx;
    left: 24rpx;
    top: 26rpx;
    font-size: 28rpx;
    line-height: 32rpx;
}
.apply-state .apply-icon{
    position: absolute;
    left: 0;
    top: 50%;
    transform: translateY(-50%);
    width: 32rpx;
    height: 32rpx;
}
.apply-state .apply-icon.in{
    width: 30rpx;
    height: 8rpx;
    background: url('http://file.xiaokeduo.com/system/xkdxcx/system/images/apply-state-wait.png') no-repeat left top;
    background-size: cover;
}
.apply-state .apply-icon.success{
    background: url('http://file.xiaokeduo.com/system/xkdxcx/system/images/apply-state-success.png') no-repeat left top;
    background-size: cover;
}
.apply-state .apply-icon.error{
    background: url('http://file.xiaokeduo.com/system/xkdxcx/system/images/apply-state-error.png') no-repeat left top;
    background-size: cover;
}
.tip-icon{
    position: absolute;
    width: 32rpx;
    height: 32rpx;
    right: 32rpx;
    top: 50%;
    transform: translateY(-50%);
    background: url('http://file.xiaokeduo.com/system/xkdxcx/system/images/help-icon.png') no-repeat left top;
    background-size: cover;
}
.popup-body{
    max-height: 670rpx;
    overflow-y: auto;
    padding: 24rpx;
    text-align: justify;
    box-sizing: border-box;
    line-height: 46rpx;
}
.rule-btn{
    position: absolute;
    left: 0;
    height: 96rpx;
    line-height: 96rpx;
    font-size: 32rpx;
    color: #515151;
    width: 100%;
    bottom: 0;
    text-align: center;
    background-color: #F7F7F7;
}