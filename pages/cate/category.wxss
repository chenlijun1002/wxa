/* pages/category/category.wxss */
.search{
  position: relative;
  padding: 24rpx;
  background-color: #fff;
}
.search-input{
  width: 600rpx;
  height: 64rpx;
  background-color: #DFDFDF;
  border-radius: 8rpx;
  overflow: hidden;
}
.search .inputf{
  display: block;
  background-color: #DFDFDF;
  border-radius: 8rpx;
  width: 532rpx;
  height: 64rpx;
  line-height: 64rpx;
  font-size: 28rpx;
  color: #757575;
  box-sizing: border-box;
  padding-left: 68rpx;
}
.search .search-icon{
  position: absolute;
  height: 32rpx;
  left: 48rpx;
  top: 50%;
  transform: translateY(-50%);
}
.search .search-btn{
  position: absolute;
  right: 0;
  top: 24rpx;
  width: 126rpx;
  text-align: center;
  height: 64rpx;
  line-height: 64rpx;
  background-color: transparent;
  border:none;
  font-size: 32rpx;
  color: #202020;
}
.one-class-nav{
  position: fixed;
  width: 200rpx;
  left: 0;
  top: 114rpx;
  bottom: 0;
  background-color: #F5F5F5;
}
.one-class-nav-item{
  height: 97rpx;
  border-bottom: 3rpx solid #fff;
  line-height: 97rpx;
  text-align: center;
  font-size: 28rpx;
  padding: 0 24rpx;
}
.one-class-nav-item text{
  display: block;
}
.one-class-nav-item.active{
  background-color: #fff;
  color: #00A699;
  border-left: 4rpx solid #00A699;
}
.two-class-list{
  position: fixed;
  left: 200rpx;
  top: 114rpx;
  bottom: 0;
  right: 0;
  background-color: #fff;
}
.two-class-group{
  width: 550rpx;
  padding-top: 24rpx;
}
.two-class-group .two-class-item{
  width: 162rpx;
  margin-left: 16rpx;
  float: left;
  margin-bottom: 50rpx;
}
.two-class-group .two-class-item image{
  display: block;
  width: 162rpx;
  height: 162rpx;
  margin-bottom: 20rpx;
  background-color: #f5f5f5;
}
.two-class-item .two-class-name{
  font-size: 24rpx;
  line-height: 24rpx;
  height: 24rpx;
  text-align: center;
}
.two-class-list .empty-data{
  width: 550rpx;
}
.two-class-list .empty-img-prompt wx-image{
  width: 191rpx;
  height: 166rpx;
}
.two-class-list .empty-data{
  padding-top: 200rpx;
}
.two-class-list .empty-data .empty-text{
    padding: 0 30rpx;
    color: #999;
}
.look-product-btn{
    display: inline-block;
    background-color: transparent;
    color: #747474;
    border:2rpx solid #747474;
    border-radius: 16rpx;
    margin: 36rpx auto 0;
    font-size: 28rpx;
}





