/* pages/refundexpress/refundexpress.wxss */

.refund-header {
  position: relative;
  padding: 32rpx 32rpx 40rpx;
}

.refund-header-title {
  padding-left: 32rpx;
  margin-bottom: 32rpx;
}

.refund-address .express-icon {
  width: 32rpx;
  height: 32rpx;
  margin-top: 6rpx;
  background: url("http://file.xiaokeduo.com/system/xkdxcx/system/images/express-icon.png") no-repeat left top;
  background-size: cover;
}
.refund-address .refund-address-text {
  overflow: hidden;
  line-height: 48rpx;
}
.header-bg {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 8rpx;
  background: url("http://file.xiaokeduo.com/system/xkdxcx/system/images/header-bg.png") repeat;
  background-position-x: -4px;
  background-size: contain;
}
.tips {
  line-height: 48rpx;
  padding: 24rpx;
  margin-bottom: 96rpx;
  font-size: 28rpx;
  color: #f44336;
}
.xkd-button-panel {
  margin-bottom: 96rpx;
}
scroll-view{
  position: absolute;
  top: 114rpx;
  bottom: 0;
  width: 100%;
  height: 766rpx;
}
.xkd-textarea-panel input {
  height: 96rpx;
  line-height: 96rpx;
  padding-left: 24rpx;
  background: #fff;
  font-size: 32rpx;
}
