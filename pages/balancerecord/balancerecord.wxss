/* pages/balancerecord/balancerecord.wxss */
.nav {
  display: flex;
  height: 112rpx;
  line-height: 112rpx;
  background: #fff;
  border-bottom: 1px solid #e0e0e0;
}
.nav view {
  flex: 1;
  text-align: center;
}
.balance-record {
  padding-left: 26rpx;
  background: #fff;
}
.balance-record .item {
  box-sizing: border-box;
  height: 154rpx;
  padding: 26rpx 28rpx 0 0;
  margin-left:13px;
  border-bottom: 1px solid #e0e0e0;
}
.balance-record .item .item-row1 {
  font-size: 36rpx;
  color: #212121;
  font-weight: 700;
}
.balance-record .item .item-row2 {
  margin-top: 14rpx;
  font-size: 28rpx;
  color: #747474;
}
scroll-view {
  position: fixed;
  top: 114rpx;
  left: 0;
  bottom: 0;
  right: 0;
  width: 100%;
}